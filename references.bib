author = {Jane Thomason and Mira Ahmad and Pascale Bronder and Edward Hoyt and Steven Pocock and Julien Bouteloupe and Katrina Donaghy and David Huysman and Tony Willenberg and Ben Joakim and Loretta Joseph and David Martin and David Shrier},
